<% provide(:title, 'new') %>
<h1>お酒登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @alchol, local: true) do |f| %>
    <%= render 'shared/error_messages' %>
    
      <%= f.label :name, class: "label-new"%>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :price, class: "label-new" %>
      <%= f.text_field :price, class: "form-control"  %>

      <%= f.submit "新規登録", class: "btn btn-primary btn-block btn-new-alchol" %>
    <% end %>
  </div>
</div>